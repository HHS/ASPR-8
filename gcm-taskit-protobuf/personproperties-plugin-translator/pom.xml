<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://maven.apache.org/POM/4.0.0"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>gov.hhs.aspr.ms.gcm.taskit.protobuf</groupId>
        <artifactId>protobuf-parent</artifactId>
        <version>${revision}</version>
    </parent>

    <artifactId>personproperties-plugin-translator</artifactId>
    <name>gcm :: taskit :: protobuf :: personproperties-plugin-translator</name>
    <packaging>jar</packaging>

    <dependencies>
        <dependency>
            <groupId>gov.hhs.aspr.ms.gcm.taskit.protobuf</groupId>
            <artifactId>properties-plugin-translator</artifactId>
            <version>${revision}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>gov.hhs.aspr.ms.gcm.taskit.protobuf</groupId>
            <artifactId>partitions-plugin-translator</artifactId>
            <version>${revision}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>gov.hhs.aspr.ms.gcm.taskit.protobuf</groupId>
            <artifactId>people-plugin-translator</artifactId>
            <version>${revision}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>gov.hhs.aspr.ms.gcm.taskit.protobuf</groupId>
            <artifactId>reports-plugin-translator</artifactId>
            <version>${revision}</version>
            <optional>true</optional>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.xolstice.maven.plugins</groupId>
                <artifactId>protobuf-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>compile</goal>
                            <goal>test-compile</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <protocArtifact>com.google.protobuf:protoc:${protoc.version}:exe:${os.detected.classifier}</protocArtifact>
                    <protoSourceRoot>${project.build.outputDirectory}/gov/hhs/aspr/gcm/taskit/protobuf/personproperties</protoSourceRoot>
                    <additionalProtoPathElements>
                        <additionalProtoPathElement>${project.build.outputDirectory}/gov/hhs/aspr/gcm/taskit/protobuf/partitions</additionalProtoPathElement>
                        <additionalProtoPathElement>${project.build.outputDirectory}/gov/hhs/aspr/gcm/taskit/protobuf/properties</additionalProtoPathElement>
                        <additionalProtoPathElement>${project.build.outputDirectory}/gov/hhs/aspr/gcm/taskit/protobuf/people</additionalProtoPathElement>
                        <additionalProtoPathElement>${project.build.outputDirectory}/gov/hhs/aspr/gcm/taskit/protobuf/reports</additionalProtoPathElement>
                    </additionalProtoPathElements>
                    <attachProtoSources>false</attachProtoSources>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>