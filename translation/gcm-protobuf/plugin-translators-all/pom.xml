<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://maven.apache.org/POM/4.0.0"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>gov.hhs.aspr.gcm.translation.protobuf</groupId>
        <artifactId>protobuf-parent</artifactId>
        <version>${revision}</version>
    </parent>

    <artifactId>plugin-translators-all</artifactId>
    <packaging>pom</packaging>
    <name>gcm.translation :: protobuf :: plugin-translators-all</name>

    <dependencies>
        <dependency>
            <groupId>gov.hhs.aspr.gcm.translation.protobuf</groupId>
            <artifactId>nucleus-translator</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>gov.hhs.aspr.gcm.translation.protobuf</groupId>
            <artifactId>stochastics-plugin-translator</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>gov.hhs.aspr.gcm.translation.protobuf</groupId>
            <artifactId>properties-plugin-translator</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>gov.hhs.aspr.gcm.translation.protobuf</groupId>
            <artifactId>globalproperties-plugin-translator</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>gov.hhs.aspr.gcm.translation.protobuf</groupId>
            <artifactId>people-plugin-translator</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>gov.hhs.aspr.gcm.translation.protobuf</groupId>
            <artifactId>groups-plugin-translator</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>gov.hhs.aspr.gcm.translation.protobuf</groupId>
            <artifactId>personproperties-plugin-translator</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>gov.hhs.aspr.gcm.translation.protobuf</groupId>
            <artifactId>regions-plugin-translator</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>gov.hhs.aspr.gcm.translation.protobuf</groupId>
            <artifactId>resources-plugin-translator</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>gov.hhs.aspr.gcm.translation.protobuf</groupId>
            <artifactId>materials-plugin-translator</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>gov.hhs.aspr.gcm.translation.protobuf</groupId>
            <artifactId>reports-plugin-translator</artifactId>
            <version>${revision}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>3.3.0</version>
                <executions>
                    <execution>
                        <id>build-package</id>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <appendAssemblyId>false</appendAssemblyId>
                            <descriptors>
                                <descriptor>assembly.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project> 